@model Scrubby.Web.Models.Data.ScrubbyRound
@{

}
<canvas id="populationChart"></canvas>
<script>
    let chartData = null;

    $(document).ready(function() {
        GetPopData({ round: @Model.Id, interval: 30 });
    });

    function GetPopData(data) {
        $.ajax({
            url: "@Url.Action("GetPopulationForRound", "ServerConnection")",
            type: "POST",
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: CreateChartData
        });
    }

    function CreateChartData(data, status) {
        chartData = {
            datasets: [
                {
                    label: "Connected Clients",
                    data: [],
                    fill: true
                }
            ]
        };

        const min = data[0].key.substring(0, data[0].key.length - 1);
        const max = data[data.length - 1].key.substring(0, data[data.length - 1].key.length - 1);

        data.forEach(function(elem) {
            const dataObject = {};
            dataObject.x = moment(elem.key.substring(0, elem.key.length - 1));
            dataObject.y = elem.value;
            chartData.datasets[0].data.push(dataObject);
        });

        BuildPopulationChart(chartData, moment(min).toDate(), moment(max).toDate());
    }

    function BuildPopulationChart(data, minTime, maxTime) {
        const config = {
            type: "line",
            data: data,
            options: {
                plugins: {
                    colorschemes: {
                        scheme: "brewer.Paired12"
                    },
                    zoom: {
                        pan: {
                            enabled: true,
                            mode: "x"
                        },
                        zoom: {
                            wheel: { enabled: true },
                            pinch: { enabled: true },
                            mode: "x"
                        },
                        limits: {
                            x: { min: 'original', max: 'original' }
                        }
                    },
                    legend: {
                        display: false
                    }
                },
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        type: "time",
                        display: true,
                        time: {
                            unit: 'minute',
                            tooltipFormat: 'h:mm'
                        },
                        title: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 11,
                        }
                    },
                    y: {
                        display: true,
                        title: {
                            display: false,
                            text: "Population"
                        },
                        ticks: {
                            maxTicksLimit: 6,
                            precision: 0
                        },
                        min: 0
                    }
                },
                elements: {
                    line: {
                        tension: 0.1
                    },
                    point: {
                        radius: 0,
                        hitRadius: 5,
                        hoverRadius: 5
                    }
                }
            }
        };

        const ctx = $('#populationChart')[0].getContext('2d');
        const chart = new Chart(ctx, config);
    }

</script>